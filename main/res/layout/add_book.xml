<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Add book"
            android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_margin="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_et_black"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:textColor="@color/colorHint"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_action_book_state"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_action_book_state"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <RadioGroup
                android:id="@+id/rgState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>


       <!-- <EditText
            android:id="@+id/etState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_et_black"
            android:drawableLeft="@drawable/ic_action_book_state"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_action_book_state"
            android:fontFamily="sans-serif"
            android:hint="@string/hint_state"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorHint"
            android:textSize="18sp" />
        -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_et_black"
            android:drawableLeft="@drawable/ic_action_location"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_action_location"
            android:fontFamily="sans-serif"
            android:hint="@string/hint_location"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorHint"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btnAddBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginStart="45dp"
            android:background="@drawable/rounded_btn_pink"
            android:text="@string/text_btn_add_book"
            android:textAllCaps="false"
            android:textColor="@color/colorHint"
            android:textSize="18sp"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>